    "def run_flask():\n",
    "    app.run(host='0.0.0.0', port=8766, debug=False, use_reloader=False)\n",
    "\n",
    "flask_thread = threading.Thread(target=run_flask, daemon=True)\n",
    "flask_thread.start()\n",
    "import time; time.sleep(2)\n",
    "print('‚úÖ Flask API running on port 8766')"
   ]
